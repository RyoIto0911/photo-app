<!DOCTYPE html>
<html>
  <head>
    <title>Photo App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-link">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar is-info">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-2" style="font-family: Georgia, serif;">Photo App</h1>
        <% end %>

      <% if user_signed_in? %>
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
              <p class="control">
                <%= link_to "Post list", photos_path, class: "button is-success" %>
              </p>
              <p class="control">
                <%= link_to "New post", new_photo_path, class: "button is-success" %>
              </p>
              <p class="control">
                <%= link_to "User list", users_path, class: "button is-success"%>
              </p>
              <p class="control">
                <%= link_to "My page", user_path(current_user), class: "button is-warning" %>
              </p>
              <p class="control">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "button is-danger" %>
              </p>
            </div>
          </div>
        </div>
      <% else %>
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
              <p class="control">
                <%= link_to "Post list", photos_path, class: "button is-success" %>
              </p>
              <p class="control">
                <%= link_to "User list", users_path, class: "button is-success"%>
              </p>
              <p class="control">
                <%= link_to "Log in", new_user_session_path, class: "button is-warning"%>
              </p>
              <p class="control">
                <%= link_to "New account", new_user_registration_path, class:"button is-link" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>

    </nav>
    <%= yield %>
  </body>
</html>